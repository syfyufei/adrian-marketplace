{
  "version": "2.0.0",
  "marketplace": {
    "name": "LLM-Research-Marketplace",
    "owner": {
      "name": "Adrian",
      "email": "syfyufei@gmail.com"
    },
    "repository": "https://github.com/syfyufei/llm-research-marketplace"
  },
  "research-memory": {
    "version": "0.2.0",
    "bootstrap": {
      "recent_entries_count": 5,
      "include_todos": true
    },
    "logging": {
      "phase_sections": [
        "DGP",
        "data_preprocess",
        "data_analyse",
        "modeling",
        "robustness",
        "writing",
        "infra",
        "notes"
      ]
    }
  },
  "project-management": {
    "version": "0.1.0",
    "standard_structure": {
      "required_dirs": [
        "claude-code",
        "data/raw",
        "data/cleaned",
        "codes",
        "paper/figures",
        "paper/manuscripts",
        "pre/poster",
        "pre/slides"
      ],
      "required_files": [
        "README.md",
        ".gitignore",
        "project.yml"
      ]
    },
    "validation": {
      "scoring_weights": {
        "directories": 40,
        "required_files": 35,
        "content_quality": 15,
        "git_integration": 10
      },
      "ui_thresholds": {
        "excellent": 90,
        "good": 75,
        "fair": 60,
        "poor": 0
      }
    },
    "templates": {
      "dir": "templates/project",
      "variables": ["project_name", "author_name", "description", "creation_date", "year"]
    }
  },
  "skill-squared": {
    "version": "0.1.0",
    "validation": {
      "required_files": [
        ".claude-plugin/marketplace.json",
        ".claude-plugin/plugin.json",
        "skills/{skill_name}.md",
        "README.md",
        "LICENSE",
        "install.sh"
      ],
      "required_frontmatter": ["name", "description"],
      "executable_files": ["install.sh"]
    },
    "sync": {
      "backup_enabled": true,
      "backup_suffix": ".backup",
      "files_to_sync": [
        "skills/{skill_name}.md",
        ".claude/commands/"
      ]
    },
    "templates": {
      "dir": "templates/skill",
      "variable_pattern": "{{(\\w+)}}"
    }
  }
}
